<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".embajador.hogar.fragments.EmbajadorHogarQueHacerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#86888C"
            android:textSize="18sp"
            android:fontFamily="@font/telefonica_regular"
            android:text="Sigue estos pasos:"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/hogar_vpPasos"
                android:layout_width="match_parent"
                android:layout_height="240dp"/>
            <ImageView
                android:id="@+id/hogar_que_hacer_ivAtras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center|left"
                android:tint="@color/colorTextoCanalEmbajador"
                app:srcCompat="@drawable/ic_back_arrow"/>
            <ImageView
                android:id="@+id/hogar_que_hacer_ivAdelante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_gravity="center|right"
                android:tint="@color/colorTextoCanalEmbajador"
                app:srcCompat="@drawable/ic_next_arrow"/>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"
            android:textColor="#86888C"
            android:fontFamily="@font/telefonica_regular"
            android:text="Importante"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/hogar_rvImportante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/telefonica_bold"
    android:includeFontPadding="false"
    android:text="\u25CF"
    android:textColor="@color/colorBeneficiosEspeciales"
    android:textSize="12sp" />

<TextView
    android:id="@+id/vineta_texto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:fontFamily="@font/telefonica_regular"
    android:paddingLeft="8dp"
    android:text="@string/salud_eps_beneficios_bullet_1"
    android:textSize="15sp" />
</LinearLayout>
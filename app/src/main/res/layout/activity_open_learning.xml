<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <include layout="@layout/my_toolbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/open_learning_ivImagen"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:srcCompat="@drawable/imagen_open_learning"
                android:scaleType="centerCrop"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/open_learning_vSingle"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/open_learning_tvDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="16dp"
                        android:text="Open Learning es nuestra primera plataforma de autoaprendizaje, donde tienes:"
                        android:fontFamily="@font/telefonica_regular"
                        android:layout_marginBottom="16dp"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/open_learning_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_margin="16dp"
                        android:background="#DADADA"/>
                    <TextView
                        android:id="@+id/open_learning_tvFooter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:text="Ingresa con tu correo corporativo y DNI"
                        android:fontFamily="@font/telefonica_regular"/>
                    <Button
                        android:id="@+id/open_learning_btGestionarAqui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IR A LA WEB"
                        android:textSize="18sp"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/telefonica_bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/boton_open_learning"
                        style="?android:attr/borderlessButtonStyle"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/marco_detalle"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/detalle_salud_tvDescripcionAportes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/telefonica_regular"
        android:paddingLeft="8dp"
        android:textColor="#86888C"
        tools:text="@string/salud_eps_aportes_bullet_1"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <include layout="@layout/table_eps"
        android:id="@+id/table_eps"
        android:visibility="gone"/>

    <include layout="@layout/table_lgbtq"
        android:id="@+id/table_lgbtq"
        android:visibility="gone"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00A9E0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/telefonica_regular"
        android:gravity="center"
        android:padding="8dp"
        android:text="Restricciones"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0">

        <android.support.v4.view.ViewPager
            android:id="@+id/embajador_movistar_total_vpRestricciones"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altura_viewpager_fragment_beenficio" />

        <ImageView
            android:id="@+id/total_restricciones_ivAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_back_arrow" />

        <ImageView
            android:id="@+id/total_restricciones_ivAdelante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="8dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_next_arrow" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
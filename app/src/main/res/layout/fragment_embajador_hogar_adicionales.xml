<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#86888C"
                android:textSize="18sp"
                android:padding="8dp"
                android:fontFamily="@font/telefonica_regular"
                android:text="Puedes complementar tu experiencia de Internet y Tv"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/hogar_vpComplementos"
                android:layout_width="match_parent"
                android:layout_height="264dp"/>
            <com.matthewtamlin.sliding_intro_screen_library.indicators.DotIndicator
                android:id="@+id/hogar_complementos_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:selectedDotColor="#DADADA"
                app:unselectedDotColor="#DADADA"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ARMA TU COMBO"
                android:gravity="center"
                android:textSize="28sp"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:textColor="#979797"
                android:fontFamily="@font/telefonica_regular"
                android:textStyle="bold"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/hogar_vpCombos"
                android:layout_width="match_parent"
                android:layout_height="456dp"/>
            <com.matthewtamlin.sliding_intro_screen_library.indicators.DotIndicator
                android:id="@+id/hogar_combos_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:selectedDotColor="#DADADA"
                app:unselectedDotColor="#DADADA"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
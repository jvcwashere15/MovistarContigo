<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/marco_detalle"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/detalle_salud_lineamientos_tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/telefonica_regular"
        android:paddingLeft="8dp"
        android:layout_marginBottom="16dp"
        tools:text="@string/salud_eps_lineamientos_bullet_1"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/detalle_salud_lineamientos_tvLinkPdf"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:fontFamily="@font/telefonica_bold"
        android:paddingLeft="8dp"
        android:background="@drawable/boton_afiliaciones_salud"
        android:textColor="@android:color/white"
        tools:text="@string/salud_eps_link_1"
        android:textSize="18sp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center"
    android:onClick="clickNull"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/view_message_ivImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@drawable/ic_empty_view_lista_vacaciones"/>
    <TextView
        android:id="@+id/view_message_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#2A2A3C"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/telefonica_bold"
        android:gravity="center"
        tools:text="Ups!"/>
    <TextView
        android:id="@+id/view_message_tvMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/telefonica_regular"
        android:gravity="center"
        tools:text="Se produjo un error en el servidor, estamos trabajando para solucionarlo"/>
</LinearLayout>
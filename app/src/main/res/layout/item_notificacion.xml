<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_notificacion_viewPrincipal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_notificacion_tvTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#00A9E0"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:fontFamily="@font/telefonica_regular"
        tools:text="DESCUENTOS"/>
    <TextView
        android:id="@+id/item_notificacion_tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#3A3A3A"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:fontFamily="@font/telefonica_regular"
        tools:text="20 % de descuento en Bodytech"/>
    <TextView
        android:id="@+id/item_notificacion_tvTimeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/telefonica_regular"
        tools:text="Hace 40 minutos"
        android:textSize="13sp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:lines="1"
        android:ellipsize="end"
        android:paddingBottom="8dp"
        android:textColor="#86888C"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA"/>
</LinearLayout>
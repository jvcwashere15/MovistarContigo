<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".autenticacion.SplashActivity">
    <LinearLayout
        android:id="@+id/splash_vSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:tint="@color/colorCanalEmbajador"
            app:srcCompat="@drawable/ic_cabecera_contigo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:fontFamily="@font/telefonica_regular"
            android:textColor="@color/colorCanalEmbajador"
            android:text="Una app creada para colaboradores de Movistar"
            android:textSize="24sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:src="@drawable/imagen_splash"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_name"
            android:layout_margin="16dp"
            android:layout_gravity="right"/>
    </LinearLayout>
    <include
        android:id="@+id/splash_vSinConexion"
        layout="@layout/sin_conexion_internet"
        android:visibility="gone"/>
</FrameLayout>
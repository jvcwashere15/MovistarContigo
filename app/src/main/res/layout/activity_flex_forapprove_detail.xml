                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detalle_solicitud_flex_tvMessageThree"
                    app:layout_constraintVertical_bias="1.0" />
                <TextView
                    android:id="@+id/detalle_solicitud_flex_tvButtonAprobar"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/boton_vacaciones_verde"
                    android:fontFamily="@font/telefonica_bold"
                    android:gravity="center"
                    android:text="Aprobar"
                    android:textAllCaps="false"

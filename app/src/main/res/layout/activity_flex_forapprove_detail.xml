    </com.facebook.shimmer.ShimmerFrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp">
                <TextView
                    android:id="@+id/detalle_solicitud_flex_tvNomEmpleado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/telefonica_regular"
                    tools:text="Aprobaste los días Flex de:"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/detalle_solicitud_flex_tvDescLider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/telefonica_bold"
                    android:textColor="#2A2A3C"
                    tools:text="José Eduardo Mendoza Zavaleta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detalle_solicitud_flex_tvNomEmpleado" />
                <View
                    android:id="@+id/view0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detalle_solicitud_flex_tvDescLider"
                    app:layout_constraintVertical_bias="0.0"/>


                <TextView
                    android:id="@+id/detalle_solicitud_flex_tvTextoEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/telefonica_regular"
                    android:text="Estado de FlexPlace"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/detalle_solicitud_flex_viewLine"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view0" />

                <TextView
                    android:id="@+id/detalle_solicitud_flex_tvEstado"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/telefonica_bold"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/etiqueta_verde"
                    app:layout_constraintBottom_toTopOf="@+id/detalle_solicitud_flex_viewLine"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view0"
                    tools:text="APROBADO"/>

                <View
                    android:id="@+id/detalle_solicitud_flex_viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="48dp"
                    android:background="#DDDDDD"
                    app:layout_constraintTop_toBottomOf="@+id/view0"/>


                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/telefonica_regular"
                    android:text="Fecha de solicitud"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/view2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detalle_solicitud_flex_viewLine" />

                <TextView
                    android:id="@+id/detalle_solicitud_flex_tvFechaSolicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/telefonica_bold"
                    android:textColor="#2A2A3C"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/view2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detalle_solicitud_flex_viewLine"
                    tools:text="15/03/2019" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="48dp"
                    android:background="#DDDDDD"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detalle_solicitud_flex_viewLine"
                    app:layout_constraintVertical_bias="0.0"
                    tools:layout_editor_absoluteX="16dp" />
                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de inicio"
                    android:textSize="16sp"
                    android:fontFamily="@font/telefonica_regular"
                    android:textColor="#757575"
                    app:layout_constraintBottom_toTopOf="@+id/view3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />
                <TextView
                    android:id="@+id/detalle_solicitud_flex_tvFechaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/telefonica_bold"
                    tools:text="01/04/2019"
                    android:textSize="16sp"
                    android:textColor="#2A2A3C"
                    app:layout_constraintBottom_toTopOf="@+id/view3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="48dp"
                    android:background="#DDDDDD"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2"
                    app:layout_constraintVertical_bias="0.0"
                    tools:layout_editor_absoluteX="16dp" />
                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de fin"
                    android:textSize="16sp"
                    android:fontFamily="@font/telefonica_regular"
                    android:textColor="#757575"
                    app:layout_constraintBottom_toTopOf="@+id/view4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view3" />
                <TextView
                    android:id="@+id/detalle_solicitud_flex_tvFechaFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/telefonica_bold"
                    tools:text="30/06/2019"
                    android:textColor="#2A2A3C"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/view4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view3" />
                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="48dp"
                    android:background="#DDDDDD"
                    app:layout_constraintBottom_toBottomOf="parent"

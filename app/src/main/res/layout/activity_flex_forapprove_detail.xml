            <FrameLayout
                android:id="@+id/detalle_solicitud_flex_viewNoticacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="#F6F6F6">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@drawable/fondo_notification">
                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_info_notification" />

                    <TextView
                        android:id="@+id/detalle_solicitud_flex_tvTituloNotificacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/telefonica_bold"
                        android:text="Motivo de cancelación"
                        android:textColor="#2A2A3C"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/imageView13"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/detalle_solicitud_flex_tvMensajeNotificacion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="#757575"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/detalle_solicitud_flex_tvTituloNotificacion"
                        app:layout_constraintTop_toBottomOf="@+id/detalle_solicitud_flex_tvTituloNotificacion"
                        tools:text="Por cambio de proyecto y sede de Telefónica." />
                </android.support.constraint.ConstraintLayout>
            </FrameLayout>
        </LinearLayout>
        <include
            android:visibility="gone"
            layout="@layout/flexplace_view_message"
            android:id="@+id/flexplace_detail_view_message"/>

    </FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".flexplace.history.HistoryFlexDetailActivity">
    <include layout="@layout/my_toolbar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/cancelar_flexplace_tvLider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/telefonica_bold"
                android:textColor="#2A2A3C"
                android:text="FlexPlace en curso"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cancelar_flexplace_tvDescLider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telefonica_regular"
                android:text="Cancelarás tus días Flex en las siguientes fechas:"
                android:textColor="#757575"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cancelar_flexplace_tvLider" />

            <View
                android:id="@+id/view0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cancelar_flexplace_tvDescLider"
                app:layout_constraintVertical_bias="0.0"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/telefonica_regular"
                android:text="Estado de FlexPlace"
                android:textColor="#757575"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/view1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view0" />

            <TextView
                android:id="@+id/cancelar_flexplace_tvEstado"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:background="@drawable/etiqueta_verde"
                android:fontFamily="@font/telefonica_bold"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/view1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view0"
                tools:text="APROBADO" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/view0"
                tools:layout_editor_absoluteX="16dp" />


            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telefonica_regular"
                android:text="Fecha de inicio"
                android:textColor="#757575"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/view3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1" />

            <TextView
                android:id="@+id/cancelar_flexplace_tvFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telefonica_bold"
                tools:text="01/04/2019"
                android:textColor="#2A2A3C"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/view3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                tools:layout_editor_absoluteX="16dp" />


            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de fin"
                android:textSize="16sp"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="#757575"
                app:layout_constraintBottom_toTopOf="@+id/view4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <TextView
                android:id="@+id/cancelar_flexplace_tvFechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telefonica_bold"
                tools:text="30/06/2019"
                android:textSize="16sp"
                android:textColor="#2A2A3C"
                app:layout_constraintBottom_toTopOf="@+id/view4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/view3"/>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/telefonica_bold"
                android:text="Día Flex elegido"
                android:textColor="#2A2A3C"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/view27"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4"
                app:layout_constraintVertical_bias="0.98" />

            <TextView
                android:id="@+id/cancelar_flexplace_tvDiasSolicitados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/telefonica_bold"
                android:textColor="#2A2A3C"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/view27"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4"
                app:layout_constraintVertical_bias="1.0"
                tools:text="Miércoles" />

            <View
                android:id="@+id/view27"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:background="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@+id/view4" />

            <EditText
                android:id="@+id/cancelar_flexplace_etDescripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/loginBoton"
                android:fontFamily="@font/telefonica_regular"
                android:hint="Escribe el motivo de cancelación de tu FlexPlace"
                android:inputType="text"
                android:maxLength="100"
                android:textColor="#757575"
                android:textSize="15sp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/cancelar_flexplace_tvBotonContinuar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view27"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/cancelar_flexplace_tvBotonContinuar"
                style="@style/BotonVerdeFlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continuar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>
        <include
            android:visibility="gone"
            layout="@layout/view_message_response_vacaciones"
            android:id="@+id/view_message"/>
    </FrameLayout>




</LinearLayout>
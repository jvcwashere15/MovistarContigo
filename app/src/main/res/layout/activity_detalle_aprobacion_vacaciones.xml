<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".vacaciones.aprobacion.DetalleAprobacionActivity">
    <include layout="@layout/my_toolbar"/>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/detalle_solicitud_shimerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:shimmer_duration="800">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_height="match_parent">
            <View
                android:id="@+id/detalle_estado_tvLider1"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/colorPlaceHolder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/detalle_estado_tvDescLider1"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPlaceHolder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detalle_estado_tvLider1" />

            <View
                android:id="@+id/view01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detalle_estado_tvDescLider1"
                app:layout_constraintVertical_bias="0.0"/>

            <View
                android:id="@+id/textView221"
                android:layout_width="104dp"
                android:layout_height="16dp"
                android:background="@color/colorPlaceHolder"
                app:layout_constraintBottom_toTopOf="@+id/view11"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view01" />

            <View
                android:id="@+id/detalle_estado_tvEstado1"
                android:layout_width="80dp"
                android:layout_height="16dp"
                android:background="@color/colorPlaceHolder"
                app:layout_constraintBottom_toTopOf="@+id/view11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view01" />

            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:background="#DDDDDD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view01"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="16dp" />


            <View
                android:id="@+id/textView241"
                android:layout_width="104dp"
                android:layout_height="16dp"
                android:background="@color/colorPlaceHolder"
                app:layout_constraintBottom_toTopOf="@+id/view31"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view11" />

            <View
                android:id="@+id/detalle_estado_tvFechaInicio1"
                android:layout_width="80dp"
                android:layout_height="16dp"
                android:background="@color/colorPlaceHolder"
                app:layout_constraintBottom_toTopOf="@+id/view31"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view11" />

            <View
                android:id="@+id/view31"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:background="#DDDDDD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view11"
                app:layout_constraintVertical_bias="0.0"/>


            <View
                android:id="@+id/textView251"
                android:layout_width="104dp"
                android:layout_height="16dp"
                android:background="@color/colorPlaceHolder"
                app:layout_constraintBottom_toTopOf="@+id/view41"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view31" />

            <View
                android:id="@+id/detalle_estado_tvFechaFin1"
                android:layout_width="80dp"
                android:layout_height="16dp"
                android:background="@color/colorPlaceHolder"
                app:layout_constraintBottom_toTopOf="@+id/view41"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view31" />

            <View
                android:id="@+id/view41"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:background="#DDDDDD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view31"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/textView261"
                android:layout_marginBottom="16dp"
                android:layout_width="104dp"
                android:layout_height="16dp"
                android:background="@color/colorPlaceHolder"
                app:layout_constraintBottom_toTopOf="@+id/detalle_estado_tvDescripcion1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view41"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/detalle_estado_tvDiasSolicitados1"
                android:layout_width="80dp"
                android:layout_height="16dp"
                android:background="@color/colorPlaceHolder"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/detalle_estado_tvDescripcion1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view41"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/detalle_estado_tvDescripcion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="#757575"
                android:textSize="14sp"
                tools:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view41" />
        </android.support.constraint.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/detalle_aprobacion_tvEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/telefonica_bold"
                android:textColor="#2A2A3C"
                tools:text="José Eduardo Mendoza Zavaleta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/detalle_aprobacion_tvDescLider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#757575"
                android:fontFamily="@font/telefonica_regular"
                android:text="Está solicitando las siguiente fechas:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detalle_aprobacion_tvEmpleado" />
            <View
                android:id="@+id/view0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detalle_aprobacion_tvDescLider"
                app:layout_constraintVertical_bias="0.0"/>
            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telefonica_regular"
                android:text="Fecha de solicitud"
                android:textColor="#757575"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view0" />
            <TextView
                android:id="@+id/detalle_aprobacion_tvFechaSolicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telefonica_bold"
                tools:text="07/01/2019"
                android:textColor="#2A2A3C"
                app:layout_constraintBottom_toTopOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view0" />
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:background="#DDDDDD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view0"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="16dp" />
            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de inicio"
                android:textSize="16sp"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="#757575"
                app:layout_constraintBottom_toTopOf="@+id/view3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />
            <TextView
                android:id="@+id/detalle_aprobacion_tvFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telefonica_bold"
                tools:text="07/01/2019"
                android:textColor="#2A2A3C"
                app:layout_constraintBottom_toTopOf="@+id/view3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:background="#DDDDDD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="16dp" />
            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de fin"
                android:textSize="16sp"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="#757575"
                app:layout_constraintBottom_toTopOf="@+id/view4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />
            <TextView
                android:id="@+id/detalle_aprobacion_tvFechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telefonica_bold"
                tools:text="07/01/2019"
                android:textColor="#2A2A3C"
                app:layout_constraintBottom_toTopOf="@+id/view4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:background="#DDDDDD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="16dp" />
            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/telefonica_bold"
                android:text="Días solicitados"
                android:textColor="#2A2A3C"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/detalle_aprobacion_tvDescripcion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4"
                app:layout_constraintVertical_bias="1.0" />
            <TextView
                android:id="@+id/detalle_aprobacion_tvDiasSolicitados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/telefonica_bold"
                tools:text="7 días"
                android:textColor="#2A2A3C"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/detalle_aprobacion_tvDescripcion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4"
                app:layout_constraintVertical_bias="1.0" />
            <TextView
                android:id="@+id/detalle_aprobacion_tvDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="#757575"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4"
                tools:text="Tienes plazo para responder a esta solicitud hasta el 07/04/2019, de lo contrario se aprobarán automáticamente." />
            <TextView
                android:id="@+id/detalle_aprobacion_tvButtonAprobar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:background="@drawable/boton_vacaciones_verde"
                android:fontFamily="@font/telefonica_bold"
                android:text="Aprobar"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/detalle_aprobacion_tvButtonRechazar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/detalle_aprobacion_tvButtonRechazar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:background="@drawable/boton_vacaciones_verde_blanco"
                android:fontFamily="@font/telefonica_bold"
                android:text="Rechazar"
                android:textAllCaps="false"
                android:textColor="@color/loginBoton"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>
        <include
            android:visibility="gone"
            layout="@layout/view_message_response_vacaciones"
            android:id="@+id/view_message"/>
    </FrameLayout>
</LinearLayout>
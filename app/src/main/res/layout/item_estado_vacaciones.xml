<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_estado_vacaciones_vEstadoVacaciones"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <TextView
        android:id="@+id/item_estado_vacaciones_tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/telefonica_regular"
        android:textColor="#757575"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="15 de jul - 28 de jul" />

    <TextView
        android:id="@+id/item_estado_vacaciones_tvEstado"
        android:layout_width="96dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/etiqueta_verde"
        android:textColor="@android:color/white"
        android:fontFamily="@font/telefonica_bold"
        android:padding="8dp"
        android:textSize="10sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="APROBADAS" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white">
    <include layout="@layout/my_toolbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/detalle_beneficio_especial_ivImagen"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                tools:srcCompat="@drawable/beneficios_especiales_maternidad_paternidad"
                android:scaleType="centerCrop"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/detalle_beneficio_especial_vSingle"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/detalle_beneficio_especial_tvDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        tools:text="@string/descripcion_maternidad_paternidad"
                        android:fontFamily="@font/telefonica_regular"
                        android:layout_marginBottom="16dp"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/detalle_beneficio_especial_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/loginHintInput"/>
                    <TextView
                        android:id="@+id/detalle_beneficio_especial_tvFooter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"
                        tools:text="@string/descripcion_maternidad_paternidad_footer"
                        android:fontFamily="@font/telefonica_regular"/>
                    <Button
                        android:id="@+id/detalle_beneficio_especial_btGestionarAqui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GESTIONAR AQUI"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/boton_beneficios_naranja"
                        style="?android:attr/borderlessButtonStyle"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/detalle_beneficio_especial_vDual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EEEEEE"
                            android:layout_gravity="bottom"/>
                        <android.support.design.widget.TabLayout
                            android:id="@+id/detalle_beneficio_especial_tabLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/MyCustomTabBeneficiosEspeciales"
                            app:tabGravity="fill"
                            app:tabMode="fixed">
                            <android.support.design.widget.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Beneficio" />
                            <android.support.design.widget.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contacto"/>
                        </android.support.design.widget.TabLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/detalle_beneficio_especial_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Planes Movistar Total"
        android:textSize="32sp"
        android:padding="8dp"
        android:fontFamily="@font/telefonica_regular"
        android:textColor="#86888C"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/telefonica_regular"
        android:textColor="#86888C"
        android:textSize="18sp"
        android:text="Elige el plan que deseas y nosotros te llamamos"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/embajador_movistar_total_vpPlanes"
        android:layout_width="match_parent"
        android:layout_height="664dp"/>
    <com.matthewtamlin.sliding_intro_screen_library.indicators.DotIndicator
        android:id="@+id/movistar_total_planes_dotIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        app:selectedDotColor="#86888C"
        app:unselectedDotColor="#86888C"/>
</LinearLayout>
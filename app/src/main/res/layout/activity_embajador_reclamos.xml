<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <include layout="@layout/my_toolbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                layout="@layout/layout_embajador_quiebres_opciones"
                android:id="@+id/quiebres_lytOpciones"/>
            <include
                layout="@layout/layout_embajador_quiebres_titular"
                android:id="@+id/quiebres_lytTitular"
                android:visibility="gone"/>
            <include
                layout="@layout/layout_embajador_quiebres_formulario"
                android:id="@+id/quiebres_lytFormulario"
                android:visibility="gone"/>
            <include
                layout="@layout/layout_embajador_quiebres_preguntas"
                android:id="@+id/quiebres_lytPreguntas"
                android:visibility="gone"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
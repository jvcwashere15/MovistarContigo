<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".embajador.total.fragments.TipoFacturacionFragment">
    <TextView
        android:id="@+id/tipo_facturacion_tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/telefonica_regular"
        android:textColor="#86888C"
        android:gravity="center"
        android:padding="8dp"
        tools:text="Los montos a pagar por cada servicio (fijo y movil) y fecha de vencimiento" />
    <ImageView
        android:id="@+id/tipo_facturacion_ivImagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/tipo_facturacion_1"/>
</LinearLayout>
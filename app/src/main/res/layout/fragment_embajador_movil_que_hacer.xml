<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".embajador.movil.fragments.EmbajadorMovilQueHacerFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#86888C"
        android:textSize="18sp"
        android:padding="16dp"
        android:fontFamily="@font/telefonica_regular"
        android:text="Sigue estos pasos:"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/movil_vpPasos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/movil_que_hacer_ivAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center|left"
            android:tint="@color/colorTextoCanalEmbajador"
            app:srcCompat="@drawable/ic_back_arrow"/>
        <ImageView
            android:id="@+id/movil_que_hacer_ivAdelante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_gravity="center|right"
            android:tint="@color/colorTextoCanalEmbajador"
            app:srcCompat="@drawable/ic_next_arrow"/>
    </FrameLayout>

</LinearLayout>
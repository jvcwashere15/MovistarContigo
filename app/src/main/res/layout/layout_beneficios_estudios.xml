<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/estudios_tvCategoria"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/telefonica_regular"
            android:textColor="@color/colorEstudios"
            android:background="@drawable/cabecera_estudios_left"
            android:foreground="?attr/selectableItemBackground"
            android:text="Categorías"/>
        <TextView
            android:id="@+id/estudios_tvUbicación"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/telefonica_regular"
            android:textColor="@color/colorEstudios"
            android:textSize="18sp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/cabecera_estudios_right"
            android:text="Ubicación"/>
    </LinearLayout>

</LinearLayout>
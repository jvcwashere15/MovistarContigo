<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/herramientas_cvMiMovistar"
        style="@style/EstiloCVHerramientas">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_mi_movistar"
                android:layout_height="32dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/telefonica_regular"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="Mi Movistar"/>
            <ImageView
                android:id="@+id/herramientas_ivFlechaMiMovistar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:rotation="90"
                android:tint="@color/colorHerramientas"
                app:srcCompat="@drawable/ic_next_arrow"
                android:layout_height="16dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/colorHerramientas"/>
    </android.support.v7.widget.CardView>
    <include
        android:id="@+id/herramientas_view_description_mi_movistar"
        android:visibility="gone"
        layout="@layout/detalle_herramientas_mi_movistar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/herramientas_cvMovistarHogar"
        style="@style/EstiloCVHerramientas">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_movistar_hogar"
                android:layout_height="32dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/telefonica_regular"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="Mi Movistar Hogar"/>
            <ImageView
                android:id="@+id/herramientas_ivFlechaMovistarHogar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:rotation="90"
                android:tint="@color/colorHerramientas"
                app:srcCompat="@drawable/ic_next_arrow"
                android:layout_height="16dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/colorHerramientas"/>
    </android.support.v7.widget.CardView>
    <include
        android:id="@+id/herramientas_view_description_movistar_hogar"
        android:visibility="gone"
        layout="@layout/detalle_herramientas_movistar_hogar"/>


</LinearLayout>
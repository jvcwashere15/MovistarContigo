<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vacaciones.aprobacion.AprobacionVacacionesActivity">
    <include layout="@layout/my_toolbar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/detalle_descuento_layout_movistar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:background="#EEEEEE" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/detalle_descuento_tabLayout"
                    style="@style/MyCustomTabVacaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabGravity="fill"
                    app:tabMode="fixed">

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendientes" />

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aprobadas" />
                </android.support.design.widget.TabLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/aprobacion_vacaciones_rvPendientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/aprobacion_vacaciones_rvAprobadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:visibility="gone"
            android:id="@+id/detalle_descuento_layout_single"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detalle_descuento_tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Saca tu diplomado!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/telefonica_bold"
                android:textColor="@color/colorSalud"/>
            <TextView
                android:id="@+id/detalle_descuento_tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="¡Ven con tus amigos y disfruta de esta increíble promoción!"
                android:textColor="#3A3A3A"
                android:gravity="center"
                android:fontFamily="@font/telefonica_regular"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/detalle_descuento_logo_prix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                app:srcCompat="@drawable/ic_descuento_prix"/>
            <TextView
                android:id="@+id/detalle_descuento_tvDescuento"
                android:layout_width="match_parent"
                android:text="5% de Dscto"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/telefonica_bold"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorCanalEmbajador"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/detalle_descuento_vLine"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSalud"/>
            <TextView
                android:id="@+id/detalle_descuento_tvDescuentoDetalle"
                android:layout_width="match_parent"
                android:fontFamily="@font/telefonica_regular"
                android:textSize="15sp"
                android:textColor="#3A3A3A"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_height="wrap_content"
                android:text="01 Caja de donuts + 01 Bebida mediana a S/ 13.50"/>
            <TextView
                android:id="@+id/detalle_descuento_tvHowToUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="13sp"
                android:background="#EEEEEE"
                android:padding="8dp"
                android:textColor="#86888C"
                android:fontFamily="@font/telefonica_regular"
                android:text="Como usar"/>
            <TextView
                android:id="@+id/detalle_descuento_tvZona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/telefonica_regular"
                android:text="* Descuento válido sólo para Lima."/>
            <Button
                android:id="@+id/detalle_descuento_btUsaloAhora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/boton_verde"
                android:textColor="@android:color/white"
                android:fontFamily="@font/telefonica_bold"
                android:text="Úsalo ahora"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
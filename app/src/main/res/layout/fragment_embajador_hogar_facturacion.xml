<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".embajador.hogar.fragments.EmbajadorHogarFacturacionFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#E1EFF3"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/colorCanalEmbajador"
                        app:srcCompat="@drawable/ic_calendario"/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/telefonica_regular"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorCanalEmbajador"
                        android:text="Período de facturación 1"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorCanalEmbajador"/>
                <TextView
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:fontFamily="@font/telefonica_regular"
                    android:text="Si te migras dentro de este periodo el descuento se refleja en tu 1era factura"/>
            </LinearLayout>
            <TextView
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:text="Inicio 1"
                android:gravity="center"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="@android:color/white"
                android:layout_gravity="center|left"
                android:background="@drawable/boton_verde"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="18/06"
                android:textStyle="bold"
                android:paddingTop="48dp"
                android:gravity="center|bottom"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="#5BC500"
                android:layout_gravity="center|left"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:text="Fin"
                android:gravity="center"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="@android:color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_gravity="center|right"
                android:background="@drawable/boton_celeste"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="17/07"
                android:textStyle="bold"
                android:paddingTop="48dp"
                android:gravity="center|bottom"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="@color/colorCanalEmbajador"
                android:layout_gravity="center|right"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#E1EFF3"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/colorCanalEmbajador"
                        app:srcCompat="@drawable/ic_calendario"/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/telefonica_regular"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorCanalEmbajador"
                        android:text="Período de facturación 2"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorCanalEmbajador"/>
                <TextView
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:fontFamily="@font/telefonica_regular"
                    android:text="Si migras después de tu fecha fin de facturación el descuento se refleja en tu 2da factura"/>
            </LinearLayout>
            <TextView
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:text="Emisión"
                android:gravity="center"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="@android:color/white"
                android:layout_gravity="center|left"
                android:background="@drawable/boton_verde"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="18/07"
                android:textStyle="bold"
                android:paddingTop="48dp"
                android:gravity="center|bottom"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="#5BC500"
                android:layout_gravity="center|left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="Vencimiento"
                android:gravity="center"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="@android:color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_gravity="center"
                android:background="@drawable/boton_rosado"/>

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="@android:color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_gravity="center|right"
                android:background="@drawable/boton_celeste"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="17/08"
                android:textStyle="bold"
                android:paddingTop="48dp"
                android:gravity="right|bottom"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="@color/colorCanalEmbajador"
                android:layout_gravity="center|right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09/08 o 10/08"
                android:textStyle="bold"
                android:paddingTop="48dp"
                android:gravity="center|bottom"
                android:fontFamily="@font/telefonica_regular"
                android:textColor="#FF0064"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>